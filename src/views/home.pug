extends layout

block content

    style.
        .card-content {
            height: 200px;
        }
    .container
        a.red-text(href=__('residentservices.information.updateloglink'))=__('residentservices.information.updatelog')
        .row
            //-.col.m4
                .card
                    .card-image

                    .card-content
                        span.card-title=__('home.emibo.title')
                        p=__('home.emibo.description')
                        a(href='/emibo/menu').blue-text=__('home.emibo.seeranking')
                    .card-action
                        a(href='/emibo').black-text=__('home.emibo.enter')
            .col.m4
                .card
                    .card-image

                    .card-content
                        span.card-title=__('home.villagers.title')
                        p=__('home.villagers.description')
                    .card-action
                        a(href='/villagers').black-text=__('home.villagers.enter')
            .col.m4
                .card
                    .card-image

                    .card-content
                        span.card-title=__('home.campsite.title')
                        p=__('home.campsite.description')
                    .card-action
                        a(href='#').white-text=__('home.campsite.enter')

            .col.m4
                .card
                    .card-image
                    .card-content
                        span.card-title=__('home.residentservices.title')
                        p=__('home.residentservices.description')
                    .card-action
                        a(href='/info').black-text=__('home.residentservices.enter')
