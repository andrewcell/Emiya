doctype html
html
    head
        title Emiya - Unofficial Animal Crossing Tools
        meta(name="viewport", content="width=device-width, user-scalable=no")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js")

        link(rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons")
    body
        header
            nav.green
                .nav-wrapper
                    a.brand-logo.right(href='/') Emiya
                    a(href='#', data-target='mobile').sidenav-trigger
                        i.material-icons menu
                    ul#nav-mobile.left.hide-on-med-and-down
                        li
                            a(href='/emibo') Emibo
        section
            block content
        footer.page-footer.green
            .footer-copyright
                .container
                    p Emiya Copyright &copy; S.Y.Lee, Hosted in Netherlands

