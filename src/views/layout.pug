doctype html
html
    head
        title=__('global.title')
        meta(name="viewport", content="width=device-width, user-scalable=no")
        script(src="https://code.jquery.com/jquery-3.4.1.min.js")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js")
        link(rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons")
        script(src='/scripts/layout.js')
    body
        header
            nav.green
                .nav-wrapper
                    a.brand-logo.right(href='/')=__('navbar.title')
                    a(href='#', data-target='mobile').sidenav-trigger
                        i.material-icons menu
                    ul#nav-mobile.left.hide-on-med-and-down
                        li
                            a(href='/emibo')=__('navbar.emibo')
                        li
                            a.modal-trigger(data-target='login-modal', href='#login-modal')=__('navbar.login')
        section
            block content
        section
           include modals/login.pug
        footer.page-footer.green
            .footer-copyright
                .container
                    p Emiya Copyright &copy; S.Y.Lee, Hosted in Netherlands
                    p Click to change Language
                        |&nbsp;
                        a(href='/lang/ko').yellow-text 한국어(대한민국, Korean)
                        |&nbsp;
                        a(href='/lang/en').white-text English (United States)

