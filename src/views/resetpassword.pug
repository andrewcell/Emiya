extends layout

block content
    script(src='/scripts/resetpw.js')
    .container
        h5=__('accounthelp.resetpassword')
        input#hash(type='hidden', value=hash)
        .row
            .input-field.col.s6
                input#password1(name='password', type='password')
                label(for='password1')=__('modal.register.password')
            .input-field.col.s6
                input#password2(name='password2', type='password')
                label(for='password2')=__('modal.register.password2')
            button#button(type='button').btn.waves-effect=__('accounthelp.resetpassword.reset')
